#ifndef IEVENT_H_
#define IEVENT_H_

#include <sys/types.h>
#include <stdint.h>

namespace rm
{

#define MAX_EPOLL_SIZE    1024

class IEvent
{
public:
	IEvent();
	virtual ~IEvent();

	void SetReadFlag();
	int8_t GetFlag();
	void SetWriteFlag();
	void SetReadWriteFlag();
	int8_t ModifyEvent(int32_t sockfd, void *pEvent);

	virtual int8_t OnCreate() = 0;
	virtual int8_t OnRead() = 0;
	virtual int8_t OnWrite() = 0;
	virtual int8_t OnTimeOut() = 0;

protected:
	int8_t CreateEpoll(int32_t size);
	int8_t AddEpoll(IEvent *pEvent);
	int8_t RemoveEvent(IEvent *pEvent);
	int32_t GetFd();

protected:
	int32_t m_fd;
	int8_t m_flag;
	int64_t m_interval;
	int64_t m_lasttime;
};

}

#endif /* IEVENT_H_ */
