#ifndef CTIMEOUT_H_
#define CTIMEOUT_H_

namespace rm
{

class CTimeOut: public IEvent
{
public:
	CTimeOut();
	virtual ~CTimeOut();

	virtual int8_t OnCreate();
	virtual int8_t OnRead();
	virtual int8_t OnWrite();
	virtual int8_t WaitEvents();

private:
	int64_t diff;
	in64_t min;
	typedef list<IEvent*>::iteror ITER;
	std::ist<IEvent*> m_eventlist;
};

}

#endif /* CTIMEOUT_H_ */
